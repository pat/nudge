!!! Strict
%html
  %head
    %title Prod
    %link{:href => '/css/reset.css', :type => 'text/css', :rel => 'stylesheet'}
    %link{:href => '/css/form.css', :type => 'text/css', :rel => 'stylesheet'}
    %link{:href => '/css/core.css', :type => 'text/css', :rel => 'stylesheet'}
  %body
    %h1 Prod: Edit Site
    
    %form.formtastic{:action => "/update/#{@site.id}", :method => 'post'}
      %fieldset.inputs
        %ol
          %li.string
            %label{:for => 'name'} Name
            %input{:id => 'name', :name => 'name', :type => 'text', :value => @site.name}
          %li.string
            %label{:for => 'repo'} Repository
            %input{:id => 'repo', :name => 'repo', :type => 'text', :value => @site.repo}
          %li.string
            %label{:for => 'folder'} Folder
            %input{:id => 'folder', :name => 'folder', :type => 'text', :value => @site.folder}
      %fieldset.buttons
        %ol
          %li.commit
            %input{:name => 'commit', :type => 'submit', :value => 'Save Changes'}

    %p
      %a{:href => '/'} Back